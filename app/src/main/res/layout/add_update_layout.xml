<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/relativeLayout"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context="Activities.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/addUpdateCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_30sdp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B4A7FF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:000"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                />


            <TextView
                android:id="@+id/addSubjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/abel"
                android:text="Add Subject"
                android:textColor="#FF404040"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />


            <EditText
                android:id="@+id/addSubject"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/abel"
                android:gravity="center_horizontal"
                android:hint="Subject Name"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="@dimen/_25sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/minusConducted"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/minus"
                    android:layout_marginRight="@dimen/_30sdp"
                    app:tint="@color/white" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/custom_input">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C:"
                        android:textSize="@dimen/_25sdp"
                        android:fontFamily="@font/abel"
                        android:textColor="#FF404040"
                        android:paddingLeft="@dimen/_10sdp"
                        />

                    <EditText
                        android:id="@+id/addConducted"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="0dp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:fontFamily="@font/courier_prime"
                        android:gravity="center_horizontal"
                        android:background="@drawable/custom_input"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="#FF404040"
                        android:textColorHint="#404040"
                        android:textSize="@dimen/_25sdp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/plusConducted"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/plus"
                    app:tint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/minusAttended"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/minus"
                    app:tint="@color/white"
                    android:layout_marginRight="@dimen/_30sdp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/custom_input">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A:"
                        android:textSize="@dimen/_25sdp"
                        android:fontFamily="@font/abel"
                        android:textColor="#FF404040"
                        android:paddingLeft="@dimen/_10sdp" />

                    <EditText
                        android:id="@+id/addAttended"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="@dimen/_1sdp"
                        android:background="@drawable/custom_input"
                        android:fontFamily="@font/courier_prime"
                        android:gravity="center_horizontal"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="#FF404040"
                        android:textColorHint="#404040"
                        android:textSize="@dimen/_25sdp" />


                </LinearLayout>



                <ImageView
                    android:id="@+id/plusAttended"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/plus"
                    app:tint="@color/white"/>

            </LinearLayout>


            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/abel"
                android:text=" Add "
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp" />


        </LinearLayout>

        <ImageView
            android:visibility="visible"
            android:id="@+id/deleteButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_250sdp"
            android:background="@drawable/custom_input"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/design_default_color_error" />


        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/astraunaut"
            android:layout_gravity="bottom"/>



    </androidx.cardview.widget.CardView>



</RelativeLayout>