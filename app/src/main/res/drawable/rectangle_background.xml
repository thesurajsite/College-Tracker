<!-- rectangular_button_background.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Apply tint color -->
    <solid android:color="@android:color/black" android:tint="@color/purple"/>

    <!-- Border properties (optional) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/>

    <!-- Corner radius (optional) -->
    <corners android:radius="0dp"/> <!-- Adjust radius as per your requirement -->

</shape>
